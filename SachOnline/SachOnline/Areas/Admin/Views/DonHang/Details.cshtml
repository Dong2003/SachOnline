@model SachOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">CHI TIẾT ĐƠN HÀNG</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="text-align:left">
            Đã thanh toán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaThanhToan)
        </dd>

        <dt style="text-align:left">
            Tình trạng giao hàng:
        </dtstyle="text-align:left">

        <dd>
            @Html.DisplayFor(model => model.TinhTrangGiaoHang)
        </dd>

        <dt style="text-align:left">
            Ngày đặt:
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayDat, "{0:dd/MM/yyyy}")
        </dd>

        <dt style="text-align:left">
            Ngày giao:
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayGiao, "{0:dd/MM/yyyy}")
        </dd>

        <dt style="text-align:left">
            Tên khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHACHHANG.HoTen)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("SỬA", "Edit", new { id = Model.MaDonHang }) |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
</p>
