@model SachOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">ĐIỀU CHỈNH THÔNG TIN ĐƠN HÀNG</h2>

@using (Html.BeginForm("Edit", "DonHang", FormMethod.Post, 
    new { @enctype = "mutipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã đơn hàng:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaDH" value="@Model.MaDonHang" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Đã thanh toán:</label>
            <div class="col-md-10">
                <div class="checkbox">
                    <input type="text" size="70" name="sDaThanhToan" value="@ViewBag.DaThanhToan"
                           required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tình trạng giao hàng:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTinhTrangGiaoHang" value="@Model.TinhTrangGiaoHang"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đặt:</label>
            <div class="col-md-10">
                <input type="datetime" name="dNgaySinh" required
                       value="@Convert.ToDateTime(Model.NgayDat)" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày giao:</label>
            <div class="col-md-10">
                <input type="datetime" name="dNgaySinh" required
                       value="@Convert.ToDateTime(Model.NgayGiao)" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mã Khách Hàng:</label>
            <div class="col-md-10">
                @Html.DropDownList("MaKH")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
</div>
