@model SachOnline.Models.DONDATHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3 {
        color: red;
        font-weight: bold;
    }

    h4 {
        color: red;
        font-weight: bold;
    }
</style>

<h2 style="color:red">XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="color:red; font-weight:bold">Bạn có chắc muốn xóa đơn hàng này?</h3>
<h4 style="color:red; font-weight:bold">@Html.Raw(ViewBag.ThongBao)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="text-align:left">
            Đã thanh toán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DaThanhToan)
        </dd>

        <dt style="text-align:left">
            Tình trạng giao hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TinhTrangGiaoHang)
        </dd>

        <dt style="text-align:left">
            Ngày đặt:
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayDat, "{0:dd/MM/yyyy}")
        </dd>

        <dt style="text-align:left">
            Ngày giao:
        </dt>

        <dd>
            @Html.FormatValue(Model.NgayGiao, "{0:dd/MM/yyyy}")
        </dd>

        <dt style="text-align:left">
            Tên khách hàng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KHACHHANG.HoTen)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ ĐƠN HÀNG", "Index")
        </div>
    }
</div>
