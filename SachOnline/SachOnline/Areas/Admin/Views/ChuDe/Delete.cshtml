@model SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    h3 {
        color: red;
        font-weight: bold;
    }

    h4 {
        color: red;
        font-weight: bold;
    }
</style>

<h2 style="color:red">XÁC NHẬN THÔNG TIN CẦN XÓA</h2>
<h3 style="color:red; font-weight:bold">Bạn có chắc muốn xóa chủ đề này?</h3>
<h4 style="color:red; font-weight:bold">@Html.Raw(ViewBag.ThongBao)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenChuDe)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-default" /> |
            @Html.ActionLink("QUAY LẠI TRANG QUẢN LÝ CHỦ ĐỀ", "Index")
        </div>
    }
</div>
