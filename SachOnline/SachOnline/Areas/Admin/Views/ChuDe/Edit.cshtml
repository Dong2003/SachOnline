@model SachOnline.Models.CHUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">ĐIỀU CHỈNH THÔNG TIN CHỦ ĐỀ</h2>

@using (Html.BeginForm("Edit", "ChuDe", FormMethod.Post,
    new { @enctype = "mutipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaChuDe" value="@Model.MaCD" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên chủ đề:</label>
            <div class="col-md-10">
                <input type="text" size="80" name="sTenChuDe" value="@Model.TenChuDe"
                    required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("QUAY LẠI TRANG QUẢN LÝ CHỦ ĐỀ", "Index")
</div>
