@model SachOnline.Models.NHAXUATBAN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">ĐIỀU CHỈNH THÔNG TIN NHÀ XUẤT BẢN</h2>

@using (Html.BeginForm("Edit", "NhaXuatBan", FormMethod.Post, 
    new { @enctype = "mutipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã nhà xuất bản:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaNXB" value="@Model.MaNXB" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tên nhà xuất bản:</label>
            <div class="col-md-10">
                <input type="text" size="80" name="sTenNXB" value="@Model.TenNXB"
                    required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Địa chỉ:</label>
            <div class="col-md-10">
                <input type="text" size="80" name="sDiaChi" value="@Model.DiaChi"
                    required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Số điện thoại NXB:</label>
            <div class="col-md-10">
                <input type="tel" name="sDienThoai"  value="@Model.DienThoai"
                    required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("QUAY LẠI TRANG QUẢN LÝ NHÀ XUẤT BẢN", "Index")
</div>
